<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_img_detail"
        android:layout_width="match_parent"
        android:layout_height="342dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_head_detail"
            android:layout_width="610dp"
            android:layout_height="342dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="center"
            tools:background="@drawable/aoyama"/>

        <ImageView
            android:id="@+id/img_arrow_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/arrow"
            app:layout_constraintStart_toStartOf="@id/layout_img_detail"
            app:layout_constraintTop_toTopOf="@id/layout_img_detail" />

        <TextView
            android:id="@+id/tv_detail_title"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="@id/layout_img_detail"
            app:layout_constraintBottom_toBottomOf="@id/layout_img_detail"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="4dp"
            android:textColor="#FFFFFFFF"
            android:textSize="27sp"
            tools:text="Salada com molho Gengibre"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_detail"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_img_detail"
        android:layout_marginTop="24dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="#FF8492A6"
        android:textSize="18sp"
        tools:text="Sed ut perspiciatis, unde omnis iste natus error sit voluptatem accusant doloremque laudantium, totam rem aperiam eaque ipsa, quae ab illo inventore veritatis."/>
</androidx.constraintlayout.widget.ConstraintLayout>